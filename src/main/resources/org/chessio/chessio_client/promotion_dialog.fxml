<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.chessio.chessio_client.SceneControllers.PromotionDialogController">
    <children>
        <Label text="Select Promotion Piece:"/>
        <RadioButton fx:id="queenButton" text="Queen" toggleGroup="$toggleGroup" selected="true"/>
        <RadioButton fx:id="rookButton" text="Rook" toggleGroup="$toggleGroup"/>
        <RadioButton fx:id="bishopButton" text="Bishop" toggleGroup="$toggleGroup"/>
        <RadioButton fx:id="knightButton" text="Knight" toggleGroup="$toggleGroup"/>
        <Button fx:id="confirmButton" text="Promote" onAction="#handlePromote"/>
    </children>
</VBox>
