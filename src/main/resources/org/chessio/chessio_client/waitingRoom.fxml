<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="org.chessio.chessio_client.SceneControllers.WaitingRoomController">
    <Label fx:id="waitingLabel" text="Waiting for an opponent..." style="-fx-font-size: 24px;" />
    <ImageView fx:id="waitingIcon" fitHeight="50" fitWidth="50" /> <!-- Icon for the waiting animation -->
    <Label fx:id="timerLabel" text="Time elapsed: 0 seconds" style="-fx-font-size: 16px;" />

    <!-- Add the Quit button -->
    <Button fx:id="quitButton" text="Quit" style="
        -fx-font-size: 18px;
        -fx-background-color: #FF5722;
        -fx-text-fill: white;
        -fx-padding: 10 20;
        -fx-background-radius: 10;
        -fx-border-radius: 10;
        -fx-font-weight: bold;
        -fx-alignment: CENTER_LEFT;
    " onAction="#handleQuitAction"/>
</VBox>
