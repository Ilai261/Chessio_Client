<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="org.chessio.chessio_client.SceneControllers.WaitingRoomController" style="-fx-background-color: rgb(48, 46, 43);">
    <!-- Waiting Label -->
    <Label fx:id="waitingLabel" text="Waiting for an opponent..." style="-fx-font-size: 24px; -fx-text-fill: white; -fx-font-weight: bold;" />

    <!-- Waiting Icon (Animation) -->
    <ImageView fx:id="waitingIcon" fitHeight="50" fitWidth="50" /> <!-- Icon for the waiting animation -->

    <!-- Timer Label -->
    <Label fx:id="timerLabel" text="Time elapsed: 0 seconds" style="-fx-font-size: 16px; -fx-text-fill: white;" />

    <!-- Quit Button -->
    <Button fx:id="quitButton" text="Quit" style="
        -fx-background-color: rgb(118, 150, 86);
        -fx-text-fill: black;
        -fx-font-size: 18px;
        -fx-font-weight: bold;
        -fx-padding: 10px 20px;
        -fx-background-radius: 10;
        -fx-border-radius: 10;" onAction="#handleQuitAction" />
</VBox>
