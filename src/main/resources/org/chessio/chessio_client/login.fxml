<VBox alignment="CENTER" prefHeight="381.0" prefWidth="375.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.chessio.chessio_client.Controllers.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <VBox alignment="TOP_CENTER" prefHeight="143.0" prefWidth="335.0">
        <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Cheesio">
                <font>
                    <Font size="22.0" />
                </font>
            </Text>
            <VBox prefHeight="200.0" prefWidth="100.0">
                <children>
                    <StackPane prefHeight="21.0" prefWidth="312.0">
                        <children>
                            <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#ebebeb" height="27.0" stroke="BLACK" strokeType="INSIDE" width="338.0" />
                            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="שם משתמש" />
                        </children>
                    </StackPane>
                    <TextField fx:id="usernameField" />
                    <StackPane prefHeight="15.0" prefWidth="323.0">
                        <children>
                            <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#ebebeb" height="27.0" stroke="BLACK" strokeType="INSIDE" width="335.0" />
                            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="סיסמא" />
                        </children>
                    </StackPane>
                    <TextField fx:id="passwordField" />
                </children>
            </VBox>
        </children>
    </VBox>
    <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleLogin" prefHeight="31.0" prefWidth="66.0" text="התחבר" />
    <Button fx:id="registerButton" onAction="#handleRegister" prefHeight="30.0" prefWidth="140.0" text="אין לך משתמש?הירשם" textAlignment="CENTER" textOverrun="CLIP" />
</VBox>
